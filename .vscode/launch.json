{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ArduinoTMP36ButtonSerial",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build ArduinoTMP36ButtonSerial",
            "program": "${workspaceFolder}/Odin.Hardware/ArduinoTMP36ButtonSerial/bin/Debug/net8.0/ArduinoTMP36ButtonSerial.dll",
            "args": ["${input:port}"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Api (Dev)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Api",
            "program": "${workspaceFolder}/Odin.Api/bin/Debug/net8.0/Odin.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "launchSettingsProfile": "https",
            "launchSettingsFilePath": "${workspaceFolder}/Odin.Api/Properties/launchSettings.json"
        }
    ],
    "inputs": [
        {
            "id": "port",
            "type": "promptString",
            "description": "The serial port to listen on e.g. COM3"
        }
    ]
}
